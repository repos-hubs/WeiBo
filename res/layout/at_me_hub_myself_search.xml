<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:background="@color/white">
	 <!-- Title Bar -->
	<RelativeLayout
		android:id="@+id/title_bar"
		android:layout_width="fill_parent"
		android:layout_height="38dip"
		android:layout_alignParentTop="true"
		android:background="@drawable/head_bg">
			<TextView
				android:id="@+id/lbl_title"
				android:gravity="center"
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:layout_gravity="center"
				android:layout_centerInParent="true"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:paddingRight="20dp"
				android:text="@string/msg_search_title"/>
			<ImageView
				android:id="@+id/btn_back"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_centerVertical="true"
				android:src="@drawable/icon_back"
				android:scaleType="fitXY"
				android:focusable="false"
				android:clickable="true"
				/>
	</RelativeLayout>
	<LinearLayout 
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="38dip"
		android:background="@drawable/tab_bg_temp"
		android:gravity="center_vertical|center_horizontal">
		<LinearLayout 
			android:id="@+id/searchUserLayout"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:gravity="center_vertical|center_horizontal"
			android:layout_centerVertical="true"
			android:layout_weight="1"
			android:layout_marginTop="3dp"
			android:layout_marginLeft="10dp"
			android:background="@drawable/at_me_search_title_bg"
			>
			<ImageView 
				android:id="@+id/searchUserImageView"
				android:src="@drawable/icon_friend_on"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"/>
			<TextView
				android:id="@+id/searchUserTextView"
				android:layout_height="fill_parent"
				android:layout_width="wrap_content"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:gravity="center_vertical"
				android:layout_marginLeft="5dp"
				android:text="@string/msg_search_user"/>																																										
		</LinearLayout>
		<LinearLayout 
			android:id="@+id/searchWeiboLayout"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:layout_marginTop="3dp"
			android:layout_marginRight="10dp"
			android:gravity="center_vertical|center_horizontal">
			<ImageView 
				android:id="@+id/searchWeiboImageView"
				android:src="@drawable/icon_recognize"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dp"/>
			<TextView
				android:id="@+id/searchWeiboTextView"
				android:layout_height="fill_parent"
				android:layout_width="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/black"
				android:textSize="18sp"
				android:layout_marginLeft="5dp"
				android:text="@string/msg_search_weibo"/>
		</LinearLayout>
	</LinearLayout>
	<!-- <ImageView 
		android:src="@drawable/dot_line_long"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"/> -->
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/tab_bg">
		
		<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/search_input_bg"
			android:layout_margin="5dp"
			android:gravity="center_horizontal">
			<EditText
				android:id="@+id/txt_input"
				android:layout_toLeftOf="@+id/btn_search"
				android:layout_width="fill_parent"
				android:layout_height="23dip"
				android:layout_marginTop="2dip"
				android:paddingLeft="10dp"
				android:paddingRight="20dp"
				android:gravity="center_vertical"
				android:singleLine="true"
				style="?android:attr/textViewStyle"
				android:background="@null"
				android:layout_centerVertical="true"
				android:textColor="#000000" />
			<ImageView
				android:id="@+id/btn_search"
				android:clickable="true"
				android:focusableInTouchMode="false"
				android:src="@drawable/icon_search_btn"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:paddingRight="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
		</RelativeLayout>
	</LinearLayout>
	<ListView 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:id="@+id/friendsListView"
		android:divider="@null"
		android:cacheColorHint="#00000000"
		/>
</LinearLayout>
