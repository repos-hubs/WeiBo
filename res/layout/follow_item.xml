<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/follow_item_bg"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical" android:gravity="center_vertical|center_horizontal">
	<ImageView android:id="@+id/userIcon" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/userName" android:layout_width="wrap_content"
		android:textColor="@color/black" android:textStyle="bold"
		android:singleLine="true" android:textSize="18sp"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/fansCount" android:layout_width="wrap_content"
		android:textColor="@color/red" android:textStyle="bold"
		android:layout_height="wrap_content" />
</LinearLayout>
