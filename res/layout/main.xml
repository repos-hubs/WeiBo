<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<FrameLayout android:id="@android:id/tabcontent"
			android:background="@color/white" android:layout_width="fill_parent"
			android:layout_height="0.0dip" android:layout_weight="1.0" />
		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="0.0" android:visibility="gone" />
		<LinearLayout android:orientation="horizontal"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_gravity="bottom" android:background="@color/white">
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/summaryLayout" android:layout_height="wrap_content"
				android:gravity="center_horizontal" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:background="@drawable/foot_on">
				<ImageView android:id="@+id/summaryImageView" android:src="@drawable/summary_on"
					android:clickable="true" android:layout_width="wrap_content"
					android:layout_marginTop="5dp" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/categoryLayout" android:layout_height="wrap_content"
				android:gravity="center_horizontal" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:background="@drawable/foot">
				<ImageView android:id="@+id/categoryImageView"
					android:layout_marginTop="5dp" android:src="@drawable/category"
					android:clickable="true" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:id="@+id/tribeLayout" android:layout_height="wrap_content"
				android:gravity="center_horizontal" android:layout_gravity="center_vertical"
				android:layout_weight="1" android:background="@drawable/foot">
				<ImageView android:id="@+id/TribeImageView" android:src="@drawable/tribe"
					android:clickable="true" android:layout_width="wrap_content"
					android:layout_marginTop="5dp" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</TabHost>
