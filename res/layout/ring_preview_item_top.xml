<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/ring_preview_item_top"
	android:layout_width="fill_parent"
	android:layout_height="80.0dip"
	android:paddingTop="4dip"
	android:paddingBottom="4dip" >
	<ImageView android:gravity="center"
	    android:id="@id/ring_image"
		android:layout_width="72.0dip"
		android:layout_height="72.0dip"
		android:src="@drawable/user_default"
		android:scaleType="centerInside"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true" />
	<TextView android:id="@id/ring_share_person"
	    android:layout_marginLeft="6.0dip"
		android:paddingTop="8.0dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/ring_image"
		style="@style/PlainBlackTextStyle"
		android:text="music sharer" />
	<TextView android:id="@id/ring_share_time"
		android:singleLine="true"
		android:layout_weight="1.0"
		android:layout_marginLeft="6.0dip"
		android:paddingTop="8.0dip"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_toRightOf="@id/ring_image"
		android:layout_below="@id/ring_share_person"
		style="@style/PlainTimeStyle"
		android:text="30minutes ago" />
	<ImageView  android:id="@id/ring_comment"
		android:layout_width="45dp"
		android:layout_height="38dp"
		android:layout_marginRight="6dip"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:scaleType="fitCenter"
		android:background="@drawable/ringtone_comment_background" />
    <ImageView  android:id="@id/ring_share"
		android:layout_width="45dp"
		android:layout_height="38dp"
		android:scaleType="fitCenter"
		android:layout_toLeftOf="@id/ring_comment"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="30dip"
		android:background="@drawable/ringtone_share_background" />
</RelativeLayout>